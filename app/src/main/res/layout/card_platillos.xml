<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/main_card_margin_vertical"
    android:layout_marginLeft="@dimen/main_card_margin_horizontal"
    android:layout_marginRight="@dimen/main_card_margin_horizontal"
    android:layout_marginTop="@dimen/main_card_margin_vertical"
    android:foreground="?attr/selectableItemBackground"
    android:fitsSystemWindows="true"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="180dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/imgplatillo"
                android:layout_toLeftOf="@+id/imgplatillo">


                <TextView
                    android:id="@+id/txttitlePlatillo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_title_margin"
                    android:layout_marginRight="@dimen/card_title_margin"
                    android:layout_marginTop="@dimen/card_title_margin"
                    android:text="@string/main_card_title"
                    android:textColor="@color/input_login"
                    android:textSize="20sp" />



                <TextView
                    android:id="@+id/txtdescPlatillo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_subtitle_margin"
                    android:layout_marginRight="@dimen/card_subtitle_margin"
                    android:layout_marginTop="@dimen/card_button_margin"
                    android:maxLength="50"
                    android:text="mhvbvjhvjgvjhgjhgjghgjhghjgjhgjhgjhgjhgjhgjhgjhgjhghggjhghjghjgjhg"
                    android:textColor="@color/input_login_hint" />

                <View
                    android:id="@+id/view_card_main3_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/card_title_margin"
                    android:background="@color/input_login_hint" />


                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Precio"
                        android:textSize="16dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/txtpirceplatillo"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text="$11.00 MXN"/>

                </LinearLayout>



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


</LinearLayout>

            <ImageView
                android:id="@+id/imgplatillo"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:src="@drawable/add_btn"
                android:scaleType="fitXY" />

        </RelativeLayout>
</android.support.v7.widget.CardView>